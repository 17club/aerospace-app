.login-container {
  height: 100vh;
  width: 100vw;
}

.form {
  padding-top: 408rpx;
  padding: 408rpx 75rpx  0 75rpx;
  color: #333;
}
.f-header {
  font-size: 44rpx;
  font-family: Source Han Sans SC;
  font-weight: bold;
}
.f-phone {
  margin-top: 82rpx;
}
.f-label {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.f-content {
  display: flex;
  align-items: center;
  height: 110rpx;
  background-color: #f5f5f5;
  border-radius: 80rpx;
  margin-bottom: 40rpx;
}
.label-image {
  width: 35rpx;
  height: 38rpx;
  margin-left: 52rpx;
  margin-right: 55rpx;
}
.code-btn {
  background-color: #0147BA;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  width: 230rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 15rpx;
}


.tip {
  font-size: 22rpx;
  text-align: center;
  color: #333;
}
.btn-box {
  display: flex;
  justify-content: space-between;
  margin-top: 100rpx;
}


.btn {
  height: 110rpx;
  border-radius: 80rpx;
  width: 280rpx;
  text-align: center;
  line-height: 110rpx;
  background: #0147BA;
  color: #fff;
  border: 1rpx solid #0147ba;
}

.btn-1 {
  background: #fff;
  color: #888;
  border: 1rpx solid #888;
}
.copyright {
  color: #333;
  font-size: 24rpx;
  text-align: center;
  position: fixed;
  bottom: 48rpx;
  left: 0;
  right: 0;
}