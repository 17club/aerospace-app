<view class="card-container" >
  <view class="title">
    <image src="/assets/train/course.svg" class="course-img"></image>
    <text>{{ info.course.name }}</text>
  </view>
  <view class="card-content">
    <view class="mt-24">
      <view>
        <text class="time">开始时间:</text>
        {{ info.begin_time_text }}
      </view>
      <view class="mt-16">
        <text class="time">结束时间:</text>
        {{info.end_time_text }}
      </view>
    </view>
    <view class="btn btn-3" wx:if="{{ curTime < info.begin_time }}">开始学习</view>
    <view class="btn btn-1" bindtap="toStudy" data-id="{{ info.id }}" wx:elif="{{ info.status < 2 }}">开始学习</view>
    <view class="btn btn-2" bindtap="toJump" data-id="{{ info.id }}" wx:elif="{{ info.status === 2 }}">继续学习</view>
    <view class="btn btn-3" wx:else bindtap="toDetail" data-id="{{ info.id }}">查看详情</view>
  </view>
</view>