<!--pages/login/login.wxml-->
<view class='login-container'>
  <view class='header'
    style="background-image: url(https://download.zhcslyg.com/wx/img/login-back.png); background-size: 100% 100%; background-repeat: no-repeat;">
    <image src="/assets/login-title.png" mode="aspectFit" />
  </view>
  <view class="form">
    <view class="f-head"> </view>
    <view class="form">
      <form bindsubmit="formSubmit">
        <view class="flex-aligin-center flex-space-between">
          <view class="form-item input-phone" style="width: calc(100vw - 200rpx - {{ countDownNum != 60 && countDownNum!= 0 ? 162 : 110}}rpx);">
            <input class="weui-input" type="number"  bindinput="onPhoneChanged" placeholder="请输入手机号" maxlength="11" />
          </view>
          <van-button plain type="primary" color="#3852FF" disabled="{{ canSendMagCode }}" class="msg-code-btn  w-382" wx:if="{{ countDownNum != 60 && countDownNum!= 0 }}">{{ countDownNum }}秒后重新获取</van-button>
          <van-button bindtap="sendCaptchaMsg" plain type="primary" color="#3852FF" disabled="{{ canSendMagCode }}" class="msg-code-btn w-274" wx:else>发送验证码</van-button>
        </view>
        <div class="error-color" wx:if="{{ !isValidatePhone }}">手机号格式不正确</div>
        <view class="form-item">
          <input class="weui-input" bindinput="onMsgCodeChanged" placeholder="请输入验证码" bindconfirm="formSubmit" />
        </view>
        <div class="error-color" wx:if="{{ !isValidateMsgCode }}">请输入验证码</div>
        <view style="text-align: center;">
          <van-button class="submit-btn"  type="primary" color="#3852FF" form-type='submit' loading="{{ loading }}">登录</van-button>
        </view>
      
      </form>
      <van-toast id="van-toast" />
    </view>
  </view>
</view>