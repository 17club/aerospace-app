.login-container {
  height: 100vh;
  width: 100vw;
}

.form {
  padding-top: 408rpx;
  padding: 408rpx 75rpx  0 75rpx;
  color: #333;
}
.f-header {
  font-size: 44rpx;
  font-family: Source Han Sans SC;
  font-weight: bold;
}
.f-phone {
  margin-top: 82rpx;
}
.f-label {
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.f-content {
  display: flex;
  align-items: center;
  height: 110rpx;
  background-color: #f5f5f5;
  border-radius: 80rpx;
  margin-bottom: 54rpx;
}
.label-image {
  width: 27rpx;
  height: 42rpx;
  margin-left: 52rpx;
  margin-right: 55rpx;
}
.label-check {
  width: 35rpx;
  height: 35rpx;
  margin-left: 52rpx;
  margin-right: 55rpx;
}
.code-btn {
  background-color: #0147BA;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  width: 230rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-right: 15rpx;
}

.login-btn {
  background-color: #0147BA;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  border-radius: 80rpx;
  margin-top: 100rpx;
}

.copyright {
  color: #333;
  font-size: 24rpx;
  text-align: center;
  position: fixed;
  bottom: 48rpx;
  left: 0;
  right: 0;
}

.disabled-btn {
  background: #888;
}
.loading-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: .5;
}