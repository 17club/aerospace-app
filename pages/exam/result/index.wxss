.exam-result {
  text-align: center;
  background-color: url('https://download.zhcslyg.com/wx/img/login-back.png');
  background-size: 100% 100%; 
  background-repeat: no-repeat;
  position: relative;
}
.header {
  height: 600rpx;
  display: flex;
  justify-content: center;
}
.title {
  color: #fff;
  position: absolute;
  top: 50rpx;
  left: 0;
  right: 0;
}

.exam-content {
  width: calc(100vw - 32rpx - 32rpx - 32rpx - 32rpx);
  height: 800rpx;
  background-color: #fff;
  position: absolute;
  top: 180rpx;
  z-index: 2;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 20rpx;
  padding: 32rpx;
}
.user {
  margin-bottom: 30rpx;
}
.tip {
  color: #aaa;
  position: absolute;
  top: 1100rpx;
  left: 0;
  right: 0;
  margin: 20rpx auto;
  font-size: 28rpx;
}

.result {
  height: 500rpx;
  background-color: #e9ecef;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.tip-bar {
  background-color: #ddd;
  padding: 10rpx 0;
  display: flex;
  justify-content: flex-end;
}
.tip-text {
  padding: 20rpx 32rpx;
  display: flex;
  justify-content: flex-end;
  font-size: 32rpx;
}
.tip-bar .icon {
  margin-right: 30rpx;
}

.icon-1 { color: #409eff; }
.icon-2 { color: #ee0a24;}
.icon-3 { color: #ccc; }
.see-result {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #409eff;
  color: #fff;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.again {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  border: 1px solid #eee;
  color: #555;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.result-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.see-detail {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 32rpx 32rpx 0 32rpx;
}
.question-item {
  width: 16%;
}

.item {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 100%;
  border: 1px solid #ccc;
  text-align: center;
}

.color-3 {
  color: #ccc;
  border: 1px solid #ccc;
}
.color-1 {
  color: #409eff;
  border: 1px solid #409eff;
}
.color-2 {
  color: #ee0a24;
  border: 1px solid #ee0a24;
}