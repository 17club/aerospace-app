<view>
  <navigation-bar navigation-data="{{navigationData}}"></navigation-bar>
  <view class="answer-card" bindtap="openAnswerCard">
    <view class="answer-card-left">
      <image class="answer-img" src="/assets/answer.svg"></image>
      <text>答题卡</text>
    </view>
    <view> 
    {{ index }} / {{ examSubjectList.length }}
    </view>
  </view>
  <view class="question-container">
    <topic info="{{ currentQuestion }}" isLog="{{ isLog }}" current-question="{{ currentQuestion.answer }}"></topic>
  </view>
  <view class="desc">
    <view class="desc-title">正确答案: {{ currentQuestion.answer }}</view>
    <view class="desc-content">
     <view class="flex-normal">
      <view class="vertical-line"></view>
      <text>解析</text>
     </view>
     <view class="gray content"> {{ currentQuestion.analysis }} </view>
    </view>
  </view>
  <van-popup
    show="{{ show }}"
    position="bottom"
    custom-style="height: 30%;"
    bind:close="onClose"
    z-index="1000"
  >
    <view class="flex tip-bar">
      <text>对 {{ successAnswserCount  }}，错{{ errorAnswserCount  }}题</text>
      <view class="flex">
        <view class="icon icon-1">
          <van-icon name="checked" color="#409eff"/>
          {{ successAnswserCount }}
        </view> 
        <view class="icon icon-2">
          <van-icon name="clear" color="#ccc"/>
          {{ errorAnswserCount }}
        </view> 
      </view>
    </view>
    <view class="answer-list">
      <view wx:for="{{ examSubjectList }}" wx:key="index" class="answer-item-box" >
        <block wx:if="{{ item.employee_info.employee_answer }}">
          <view class="answer-item color-1" wx:if="{{ item.answer === item.employee_info.employee_answer }}" bindtap="jumpToQuestion" data-index="{{ index }}">{{ index + 1 }}</view>
          <view class="answer-item color-2" wx:else bindtap="jumpToQuestion" data-index="{{ index }}">{{ index + 1 }}</view>
        </block>
        <view class="answer-item color-3" wx:else bindtap="jumpToQuestion" data-index="{{ index }}">{{ index + 1 }}</view>
      </view>
    </view>
  </van-popup>
</view>
